<?xml version="1.0" encoding="utf-8"?>
<!-- i made layout so that this app runs in every size device ,
 not static attributes(height , width ) except in a image where it is required-->
<!-- different mobile phones have different size , so scrollview to scrolling in small size mobile  phones-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <!-- this is the main layout whose orientation is vertical-->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#FFA500"
        android:orientation="vertical">

        <!-- this text view is used  for top text Score Keeping App-->
        <TextView
            android:gravity="center"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="Dice Rolling"
            android:layout_margin="10px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--this is just a view to show a boundary in between -->
        <View
            android:background="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="10px"/>

        <!--checkbox to on/off game music -->
        <CheckBox
            android:text="Game Music On/Off"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:id="@+id/checkboxgamemusic" />

        <!--this is a view to show a boundary in between -->
        <View
            android:background="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="10px"/>
        <TextView
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Select Die"
            android:layout_margin="2px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!--to choose game type -->
        <Spinner
            android:id="@+id/spinnerdicetype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>

        <!--this is a view to show a boundary in between -->
        <View
            android:background="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="10px"/>

        <!-- a linear layout in which a sub linear layout is made
         where team name and image is present -->


        <!-- view for boundary in between-->
        <View
            android:background="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="10px"/>



        <!--start ##################################################################### -->
        <!-- linear layout for team score text views
         and buttons to increase and decrease with switch-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="9"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- to display score of first team -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- text view to display team A-->
                <TextView
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:text="Roll Once"
                    android:gravity="top"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <!-- text view to disply team A score -->
                <TextView
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:text="Side Up: "
                    android:id="@+id/textviewrollonce"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!-- to display increase /decrease button with switch score -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <!-- switch to change current scoring team -->
                <Switch
                    android:text="Roll Once"
                    android:textColor="#00FF00"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switchrolltype" />
                <!-- button to decrease score of selected team-->
                <Button
                    android:gravity="center"
                    android:layout_marginTop="5px"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnrolldice"

                    android:text="Roll"
                    android:textSize="50px"
                    android:layout_marginBottom="2px"
                    android:onClick="rollDice"
                    />

            </LinearLayout>


            <!-- to display second team score-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <!-- text view to display team B -->
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="top"
                    android:textStyle="bold"
                    android:text="Roll Twice"
                    android:layout_height="wrap_content" />
                <!-- text view to display team B score-->
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:id="@+id/textviewrolltwice"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Side Up:"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
        <!--end ##################################################################### -->


        <!-- view for boundary in between-->
        <View
            android:background="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="10px"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Add Your Own Number Dice"
    android:textStyle="bold"
    android:textSize="30dp"
    />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Enter Sides of Dice"
            android:id="@+id/edittextowndicesides"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:layout_margin="2dp"
            android:textColor="#ffffff"
            android:background="#000000"
            android:onClick="addNewDiceType"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"/>


    </LinearLayout>

</ScrollView>

